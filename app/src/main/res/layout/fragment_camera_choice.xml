<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentSecundary"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="15dp">

    <ImageButton
            android:id="@+id/photoBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccentPrimary"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="40"
            android:textColor="@color/white"
            android:text="Take a picture"
            android:layout_marginStart="160dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_photo"
            android:layout_centerVertical="true"
            android:padding="20dp"
           />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="15dp">

        <ImageButton
            android:id="@+id/videoBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="video"
            android:background="@color/colorAccentPrimary"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="40"
            android:textColor="@color/white"
            android:text="Record a video"
            android:layout_marginStart="160dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_video"
            android:layout_centerVertical="true"
            android:padding="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="15dp">

        <ImageButton
            android:id="@+id/galleryBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="gallery"
            android:background="@color/colorAccentPrimary"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="40"
            android:textColor="@color/white"
            android:text="Go to the gallery"
            android:layout_marginStart="160dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_gallery"
            android:layout_centerVertical="true"
            android:padding="20dp"
            />


    </RelativeLayout>
</LinearLayout>